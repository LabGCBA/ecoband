<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Inherit from the dark AppCompat theme -->
    <style name="EcoBand" parent="Theme.AppCompat">
        <!-- Override the app bar color -->
		<item name="actionBarStyle">@style/ActionBarTheme</item>
		
		<!-- Override the color of UI controls -->
		<item name="android:colorForegroundInverse">@color/colorAccent</item>
		<item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>
	<style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar.Solid">
	    <item name="background">@color/windowBackground</item>
	</style>
	<style name="Button" parent="EcoBand">
	    <item name="backgroundTint">@color/colorAccent</item>
	</style>
	<style name="TextView" parent="EcoBand">
	    <item name="android:textColor">@color/textColorBody</item>
	</style>
</resources>