{
    "extends": [
        "eslint-config-kyt"
    ],

    "env": {
    },

    "plugins": [
    ],

    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "class-methods-use-this": [0],
        "constructor-super": "error",
        "no-console": [0],
        "no-unused-vars": [0],
        "no-underscore-dangle": [0],
        "brace-style": [1, "stroustrup"],
        "import/imports-first": [0],
        "max-len": [1, 120],
        "arrow-body-style": [0],
        "react/jsx-no-bind": [0],
        "no-plusplus": [0]
    }
}
